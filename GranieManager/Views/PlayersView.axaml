<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:GranieManager.ViewModels"
        xmlns:models="clr-namespace:GranieManager.Models"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GranieManager.Views.PlayersView"
        x:DataType="viewModels:PlayersViewModel">
        
        <StackPanel>
                <TextBlock Text="{Binding Title}"/>
                <ListBox ItemsSource="{Binding Players}">
                        <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="models:Player">
                                        <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                        </ListBox.ItemTemplate>
                </ListBox>
                <Button Content="Add new player"/>
        </StackPanel>
        
</UserControl>
